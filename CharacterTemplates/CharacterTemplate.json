{
	"$schema": "http://json-schema.org/schema#",
	"type": "object",
	"$script": {
		"className": "CharacterTemplates.scripts.Character"
	},
	"properties": {
		"Attributes": {
			"type": "object",
			"$script": {
				"className": "CharacterTemplates.scripts.Attributes"
			},
			"properties": {
				"Strength": {
					"type": "integer"
				},
				"Dexterity": {
					"type": "integer"
				},
				"Constitution": {
					"type": "integer"
				},
				"Intelligence": {
					"type": "integer"
				},
				"Wisdom": {
					"type": "integer"
				},
				"Charisma": {
					"type": "integer"
				}
			},
			"required": [
				"Charisma",
				"Constitution",
				"Dexterity",
				"Intelligence",
				"Strength",
				"Wisdom"
			]
		},
		"ClassInformation": {
			"type": "object",
			"$script": {
				"className": "CharacterTemplates.scripts.ClassInformation"
			},
			"properties": {
				"Classes": {
					"type": "array",
					"items": {
						"type": "object",
						"$script": {
							"className": "CharacterTemplates.scripts.CharacterClass"
						},
						"properties": {
							"Class": {
								"type": "string"
							}
						},
						"required": [
							"Class"
						]
					}
				},
				"ClassAddition": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"Class": {
								"type": "string"
							},
							"Enhancements": {
								"type": "array",
								"items": {
									"type": "object",
									"properties": {
										"Enhancement": {
											"type": "string"
										},
										"Amount": {
											"type": "integer"
										}
									},
									"required": [
										"Amount",
										"Enhancement"
									]
								}
							},
							"Spells": {
								"type": "array",
								"items": {
									"type": "string"
								}
							}
						},
						"required": [
							"Class",
							"Enhancements",
							"Spells"
						]
					}
				}
			},
			"required": [
				"ClassAddition",
				"Classes"
			]
		},
		"PersonalInformation": {
			"type": "object",
			"$script": {
				"className": "CharacterTemplates.scripts.PersonalInfo"
			},
			"properties": {
				"Deity": {
					"type": "string"
				},
				"Race": {
					"type": "string"
				},
				"Name": {
					"type": "string"
				},
				"Age": {
					"type": "integer"
				},
				"Alignment": {
					"type": "string"
				},
				"Weight": {
					"type": "number"
				},
				"Experience": {
					"type": "integer"
				},
				"Gender": {
					"type": "string"
				},
				"Money": {
					"type": "object",
					"properties": {
						"Platinum": {
							"type": "integer"
						},
						"Gold": {
							"type": "integer"
						},
						"Electrum": {
							"type": "integer"
						},
						"Silver": {
							"type": "integer"
						},
						"Copper": {
							"type": "integer"
						}
					},
					"required": [
						"Copper",
						"Electrum",
						"Gold",
						"Platinum",
						"Silver"
					]
				}
			},
			"required": [
				"Age",
				"Alignment",
				"Deity",
				"Experience",
				"Gender",
				"Money",
				"Name",
				"Race",
				"Weight"
			]
		},
		"Health": {
			"type": "object",
			"properties": {
				"TotalHp": {
					"type": "integer"
				},
				"CurrentHp": {
					"type": "integer"
				},
				"TemporaryHp": {
					"type": "integer"
				}
			},
			"required": [
				"CurrentHp",
				"TemporaryHp",
				"TotalHp"
			]
		},
		"Defense": {
			"type": "object",
			"$script": {
				"className": "CharacterTemplates.scripts.Defense"
			},
			"properties": {
				"Armor": {
					"type": "array",
					"items": {
						"type": "object",
						"$script": {
							"className": "CharacterTemplates.scripts.DefensiveItem"
						},
						"properties": {
							"Defense": {
								"type": "string"
							}
						}
					},
					"required": [
						"Defense"
					]
				}
			},
			"required": [
				"Armor"
			]
		},
		"Offense": {
			"type": "object",
			"$script": {
				"className": "CharacterTemplates.scripts.Offense"
			},
			"properties": {
				"Weapons": {
					"type": "array",
					"items": {
						"type": "object",
						"$script": {
							"className": "CharacterTemplates.scripts.OffensiveItem"
						},
						"properties": {
							"Weapon": {
								"type": "string"
							}
						}
					},
					"required": [
						"Weapon"
					]
				}
			},
			"required": [
				"Weapons"
			]
		},
		"Skills": {
			"$ref": "Skills.json#/properties/Skills"
		}
	},
	"required": [
		"Attributes",
		"ClassInformation",
		"Defense",
		"Health",
		"Offense",
		"PersonalInformation",
		"Skills"
	]
}