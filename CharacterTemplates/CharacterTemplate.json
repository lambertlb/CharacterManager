{
	"$schema": "http://json-schema.org/schema#",
	"type": "object",
	"properties": {
		"Classes": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"Class": {
						"type": "string"
					},
					"$script": {
						"className": "CharacterTemplates.scripts.Classes"
					}
				},
				"required": [
					"Class"
				]
			}
		},
		"PersonalInformation": {
			"type": "object",
			"properties": {
				"Name": {
					"type": "string"
				},
				"Race": {
					"type": "string"
				},
				"Age": {
					"type": "integer"
				},
				"Alignment": {
					"type": "string"
				},
				"Deity": {
					"type": "string"
				},
				"Weight": {
					"type": "number"
				},
				"Experience": {
					"type": "integer"
				},
				"Gender": {
					"type": "string"
				},
				"Money": {
					"type": "object",
					"properties": {
						"Platinum": {
							"type": "integer"
						},
						"Gold": {
							"type": "integer"
						},
						"Electrum": {
							"type": "integer"
						},
						"Silver": {
							"type": "integer"
						},
						"Copper": {
							"type": "integer"
						}
					},
					"required": [
						"Copper",
						"Electrum",
						"Gold",
						"Platinum",
						"Silver"
					]
				}
			},
			"required": [
				"Age",
				"Alignment",
				"Deity",
				"Experience",
				"Gender",
				"Money",
				"Name",
				"Race",
				"Weight"
			]
		},
		"Health": {
			"type": "object",
			"properties": {
				"TotalHp": {
					"type": "integer"
				},
				"CurrentHp": {
					"type": "integer"
				},
				"TemporaryHp": {
					"type": "integer"
				}
			},
			"required": [
				"CurrentHp",
				"TemporaryHp",
				"TotalHp"
			]
		},
		"Defense": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"Offense": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"Skills": {
			"$ref": "Skills.json#/properties/Skills"
		}
	},
	"required": [
		"Defense",
		"Health",
		"Offense",
		"PersonalInformation",
		"Skills"
	]
}