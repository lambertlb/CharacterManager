{
	"$schema": "http://json-schema.org/schema#",
	"type": "object",
	"properties": {
		"$script": {
			"className": "CharacterTemplates.scripts.Character"
		},
		"Attributes": {
			"type": "object",
			"properties": {
				"Strength": {
					"type": "integer"
				},
				"Dexterity": {
					"type": "integer"
				},
				"Constitution": {
					"type": "integer"
				},
				"Intelligence": {
					"type": "integer"
				},
				"Wisdom": {
					"type": "integer"
				},
				"Charisma": {
					"type": "integer"
				},
				"$script": {
					"className": "CharacterTemplates.scripts.Attributes"
				}
			},
			"required": [
				"Charisma",
				"Constitution",
				"Dexterity",
				"Intelligence",
				"Strength",
				"Wisdom"
			]
		},
		"Classes": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"Class": {
						"type": "string"
					},
					"$script": {
						"className": "CharacterTemplates.scripts.Classes"
					}
				},
				"required": [
					"Class"
				]
			}
		},
		"PersonalInformation": {
			"type": "object",
			"properties": {
				"Name": {
					"type": "string"
				},
				"Race": {
					"type": "string"
				},
				"Age": {
					"type": "integer"
				},
				"Alignment": {
					"type": "string"
				},
				"Deity": {
					"type": "string"
				},
				"Weight": {
					"type": "number"
				},
				"Experience": {
					"type": "integer"
				},
				"Gender": {
					"type": "string"
				},
				"Money": {
					"type": "object",
					"properties": {
						"Platinum": {
							"type": "integer"
						},
						"Gold": {
							"type": "integer"
						},
						"Electrum": {
							"type": "integer"
						},
						"Silver": {
							"type": "integer"
						},
						"Copper": {
							"type": "integer"
						}
					},
					"required": [
						"Copper",
						"Electrum",
						"Gold",
						"Platinum",
						"Silver"
					]
				},
				"$script": {
					"className": "CharacterTemplates.scripts.PersonalInfo"
				}
			},
			"required": [
				"Age",
				"Alignment",
				"Deity",
				"Experience",
				"Gender",
				"Money",
				"Name",
				"Race",
				"Weight"
			]
		},
		"Health": {
			"type": "object",
			"properties": {
				"TotalHp": {
					"type": "integer"
				},
				"CurrentHp": {
					"type": "integer"
				},
				"TemporaryHp": {
					"type": "integer"
				}
			},
			"required": [
				"CurrentHp",
				"TemporaryHp",
				"TotalHp"
			]
		},
		"Defense": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"Defense": {
						"type": "string"
					},
					"$script": {
						"className": "CharacterTemplates.scripts.Defense"
					}
				},
				"required": [
					"Defense"
				]
			}
		},
		"Offense": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"Weapon": {
						"type": "string"
					},
					"$script": {
						"className": "CharacterTemplates.scripts.Offense"
					}
				},
				"required": [
					"Weapon"
				]
			}
		},
		"Skills": {
			"$ref": "Skills.json#/properties/Skills"
		}
	},
	"required": [
		"Attributes",
		"Classes",
		"Defense",
		"Health",
		"Offense",
		"PersonalInformation",
		"Skills"
	]
}